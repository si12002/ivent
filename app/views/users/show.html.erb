<% provide(:title, @user.name) %>
<h1><%= @user.name %>さんのマイページ</h1>



<p><strong>主催イベント</strong></p>
<ul>
<% @user.manages.each do |manage| %>
  <li>
  <%= link_to manage.event.title, manage.event %>
  </li>
<% end %>
</ul>

<p><strong>参加イベント</strong></p>
<ul>
<% @user.entries.each do |entry| %>
  <li>
  <%= link_to entry.event.title, entry.event %>
  </li>
<% end %>
</ul>


<p><strong>ユーザー情報</strong></p>
<p><strong>名前 : </strong><%= @user.name %></p>
<p><strong>メールアドレス : </strong><%= @user.email %></p>

<%= link_to "ユーザー情報変更", edit_user_registration_path %>
